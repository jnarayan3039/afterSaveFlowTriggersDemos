<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Special_Chars_for_Candidate_Name</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( First_Name__c ,&quot;^[a-zA-Z]+$&quot;))</errorConditionFormula>
    <errorDisplayField>First_Name__c</errorDisplayField>
    <errorMessage>Name can only contain letters and spaces</errorMessage>
</ValidationRule>
