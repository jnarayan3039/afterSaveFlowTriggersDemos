<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rejection_Reason_is_required_if_rejected</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
   ISPICKVAL( Status__c ,&quot;Rejected&quot;),
   ISBLANK( Rejection_Reason__c)  
 )</errorConditionFormula>
    <errorDisplayField>Rejection_Reason__c</errorDisplayField>
    <errorMessage>Please provide a Rejection Reason when marking an application as Rejected</errorMessage>
</ValidationRule>
