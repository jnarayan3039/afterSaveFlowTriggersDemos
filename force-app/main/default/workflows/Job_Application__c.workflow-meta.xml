<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Remainder_Notification_Email</fullName>
        <ccEmails>trailblazertutor@gmail.com</ccEmails>
        <description>Remainder Notification Email</description>
        <protected>false</protected>
        <recipients>
            <recipient>trailblazertutor@curious-fox-hhpdlc.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>unfiled$public/New_Application_Notfication</template>
    </alerts>
    <alerts>
        <fullName>Send_Email_notification_to_Recruiter_when_an_Application_is_Submitted</fullName>
        <ccEmails>trailblazertutor@gmail.com</ccEmails>
        <description>Send Email notification to Recruiter when an Application is Submitted</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>unfiled$public/New_Application_Notfication</template>
    </alerts>
    <fieldUpdates>
        <fullName>Status_closed</fullName>
        <field>Status__c</field>
        <literalValue>Hold</literalValue>
        <name>Status closed</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>update_to_Submitted_for_Approval</fullName>
        <field>Status__c</field>
        <literalValue>Open</literalValue>
        <name>update to Submitted for Approval</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Create Task for Recruiter to confirm Logistics</fullName>
        <actions>
            <name>Confirm_Interview_Logistics</name>
            <type>Task</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Job_Application__c.Stage__c</field>
            <operation>equals</operation>
            <value>Interview Scheduled</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Send Email Alert to Recruiter</fullName>
        <actions>
            <name>Send_Email_notification_to_Recruiter_when_an_Application_is_Submitted</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Job_Application__c.Status__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Send Remainder to Hiring Manager</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Job_Application__c.Stage__c</field>
            <operation>equals</operation>
            <value>Shortlisted</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Remainder_Notification_Email</name>
                <type>Alert</type>
            </actions>
            <timeLength>3</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <tasks>
        <fullName>Confirm_Interview_Logistics</fullName>
        <assignedTo>trailblazertutor@curious-fox-hhpdlc.com</assignedTo>
        <assignedToType>user</assignedToType>
        <dueDateOffset>1</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <priority>High</priority>
        <protected>false</protected>
        <status>Not Started</status>
        <subject>Confirm Interview Logistics</subject>
    </tasks>
</Workflow>
